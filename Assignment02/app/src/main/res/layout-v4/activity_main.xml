<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vee.assignment02.MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <EditText
        android:id="@+id/txtOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:width="130dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/head"
        />

    <EditText
        android:id="@+id/txtTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:width="130dp"
        android:layout_below="@id/head"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"


        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:id="@+id/proc" />

    <Button
        android:id="@+id/btnCalculate"
        android:text="@string/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOne"
        android:onClick="calculate"
        />
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnReset"
        android:layout_below="@id/btnCalculate"
        android:translationX="40dp"
        android:onClick="reset"


        />
    <Button
        android:id="@+id/btnExit"
        android:text="@string/btnExit"
        android:layout_below="@id/btnCalculate"
        android:layout_alignParentRight="true"
        android:translationX="-40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exit"/>

    <TextView
        android:id="@+id/resultTxt"
        android:textSize="30sp"
        android:layout_below="@id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rGone"
        android:translationY="10dp"
        android:layout_below="@id/btnReset"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/sum"
            android:text="@string/sum"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <RadioButton
            android:id="@+id/subtraction"
            android:text="@string/subtraction"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/multiplication"
            android:text="@string/multiplication"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/divide"
            android:text="@string/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>


    <EditText
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rGone"
        android:width="100dp"
        android:translationX="10dp"
        android:translationY="50dp"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/convMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:layout_below="@+id/rGone"
        android:layout_alignParentEnd="true"
        android:translationX="-10dp"
        android:translationY="65dp"
        android:textSize="15sp"

        />

        <Button
            android:id="@+id/convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rGone"
            android:layout_centerHorizontal="true"
            android:translationY="50dp"
            android:text="@string/convert"
            android:onClick="translator"

            />

        <RadioGroup
            android:id="@+id/rGtwo"
            android:layout_below="@+id/convert"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:translationY="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/tlTOusd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tlTOusd"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/tlTOeuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tlTOeuro"
                />
            <RadioButton
                android:id="@+id/usdTOtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usdTOtl"
                />
            <RadioButton
                android:id="@+id/euroTOtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euroTOtl"
                />
        </RadioGroup>

</RelativeLayout>
